@inject NavigationManager NavigationManager


@if (CodeSnippets != null && CodeSnippets.Count > 0)
{
    foreach (var codeSnippet in CodeSnippets)
    {
        <tr>
            <td>@codeSnippet.Name</td>
            <td>@codeSnippet.Author</td>
            <td>@codeSnippet.PublicationDate</td>
            <td>
                <button type="button"
                class="btn btn-light" @onclick="@(() => UpdateCodeSnippet(codeSnippet.Id))">Edit</button>
            </td>
        </tr>
    }
}

@code {
    [Parameter]
    public List<CodeSnippet> CodeSnippets { get; set; } = new List<CodeSnippet>();

    private void UpdateCodeSnippet(int codeSnippetID)
    {
        NavigationManager.NavigateTo($"/updatecodesnippet/{codeSnippetID}");
    }
}
